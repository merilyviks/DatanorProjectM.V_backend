<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog

                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="Merily" id="changelog-1.0">
        <createTable tableName="city_names">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="city_name" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="weather_information">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="city_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_city_names_weather_information"
                             references="city_names(id)"
                             primaryKey="false" unique="false"/>
            </column>
            <column name="temperature" type="integer">
                <constraints nullable="false" primaryKey="false" unique="true"/>
            </column>
            <column name="wind_speed" type="integer">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        <column name="humidity" type="integer">
            <constraints nullable="false" primaryKey="false" unique="false"/>
        </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
